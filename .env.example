# K≈çdo Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================

# Neo4j (Graph Database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=kodopassword

# Qdrant (Vector Database)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# PostgreSQL (Relational Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=kodo
POSTGRES_PASSWORD=kodopassword
POSTGRES_DB=kodo

# Redis (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# AI/LLM Configuration
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI (optional, for embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# Voyage AI (for code embeddings)
VOYAGE_API_KEY=your-voyage-api-key-here

# =============================================================================
# Embedding Configuration
# =============================================================================

# Options: voyage-code-2, text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=voyage-code-2
EMBEDDING_DIMENSION=1024

# =============================================================================
# Repository Configuration
# =============================================================================

# Directory where cloned repositories are stored
REPOS_DIR=./repos

# Maximum repository size (in MB) to index
MAX_REPO_SIZE_MB=500

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_RATE_LIMITING=true
